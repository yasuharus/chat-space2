%body
  .flash-box
  .wrapper
    .chat-side
      .side-header
        .side-header__box
          %p.side-header__box__user-name haru
          %ul.side-header__box__menu
            %li.side-header__box__menu__new-group
              = link_to new_group_path do
                %i.fa.fa-edit
            %li.side-header__box__menu__edit-user
              = link_to edit_user_path(current_user) do
                %i.fa.fa-cog
      .groups
        .group
          %p.group__group-name
            
          %p.group__latest-message おはよう
    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group team
          %ul.main-header__left-box__member-list
            %li.main-header__left-box__member-list__member  Member : tanaka
        = link_to edit_group_path(@group) do
          .main-header__edit-btn Edit
      .messages
        .message
          .message__upper-info
            %p.message__upper-info__talker HARU
            %p.message__upper-info__date 2019/11/11(Mon) 11:11:11
          %p.message__text おはよう
      .form
        = form_for [@group, @message] do |f|
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image', for: 'message-image' do
            = fa_icon 'image'
            = f.file_field :image, class: 'hidden', id: 'message-image'
          = f.submit "Send", class: 'submit-btn'
